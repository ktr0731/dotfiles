[user]
  name = "Taro Aoki"
  email = "aizu.s1230022@gmail.com"

[alias]
  s = status
  g = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
  a = add
  c = commit
  cm = commit -m
  ch = checkout
  chb = checkout -b
  p = push
  cancel = reset --hard HEAD~
  b = for-each-ref --sort=committerdate refs/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'

[core]
  editor = vim
  excludefile = ~/.gitignore_global

[ghq]
  root = ~/.ghq
  root = ~/.go/src

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
