#!/usr/bin/env zsh

DOTPATH="$HOME"/dotfiles

! test -e "$DOTPATH" && echo "\$DOTPATH does not exist" && exit 0

cd "$DOTPATH"

if type git > /dev/null 2>&1; then
  git stash -u
  git pull origin master
fi

test -e "$HOME"/.zshrc && source "$HOME"/.zshrc
test -e "$HOME"/.zshenv && source "$HOME"/.zshenv
