#!/usr/bin/env zsh

DOTPATH="$HOME"/dotfiles

[ ! -e "$DOTPATH" ] && echo "\$DOTPATH does not exist" && exit 0

cd "$DOTPATH"

if type git > /dev/null 2>&1; then
  git stash -u
  git pull origin master
fi

[ -f "$HOME"/.zshrc ] && source "$HOME"/.zshrc
[ -f "$HOME"/.zshenv ] && source "$HOME"/.zshenv
