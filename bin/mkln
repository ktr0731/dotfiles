#!/usr/bin/env bash

DOTPATH="$HOME"/dotfiles

echo "\$DOTPATH : $DOTPATH"
echo "Created dotfile symbolic links."

directories=(git others)

# Root
for dir in "${directories[@]}"; do
  echo "$dir"

  for rcfile in "$DOTPATH"/"$dir"/*; do
    ln -sf "$rcfile" "$HOME/.${rcfile:t}"
    if [ $? -eq 0 ]; then
      print "    - $rcfile"
    fi
  done
done

echo ""

# XDG config
directories=(vim)
ln -sf "$DOTPATH"/xdg-config/nvim "$HOME"/.config/nvim
