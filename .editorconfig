root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[Makefile]
trim_trailing_whitespace = false
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.go]
indent_style = tab
indent_size = 8
